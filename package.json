{
  "name": "easypanel-sdk",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@8.10.0",
  "description": "EasyPanel is Next Generation Server Control Panel",
  "author": "Mehmet - hi@productdevbook.com",
  "license": "MIT",
  "funding": "https://github.com/sponsors/productdevbook",
  "homepage": "https://productdevbook.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/Easypanel-Community/easypanel.git"
  },
  "bugs": "https://github.com/Easypanel-Community/easypanel/issues",
  "keywords": [
    "easypanel",
    "typescript easypanel",
    "easypanel api",
    "easypanel-sdk"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "pnpm run build",
    "release": "pnpm build && bumpp --commit --push --tag && pnpm publish",
    "lint": "pnpm build && eslint . && pnpm typecheck",
    "lint:ci": "eslint . && pnpm typecheck",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "ofetch": "^1.3.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "2.1.0",
    "@vitest/coverage-v8": "^0.34.6",
    "bumpp": "^9.2.0",
    "eslint": "^8.54.0",
    "lint-staged": "^15.1.0",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^0.34.6"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "pnpm eslint . --fix"
  },
  "publishConfig": {
    "access": "public"
  }
}
